<% year = 0 %>
<% month = 0 %>

<%= month_calendar(attribute: :date, events: @incomes) do |date, incomes| %>
  <%= date.strftime("%d") %>
  <% if date.strftime("%d") == "15" %>
    <% year = date.strftime("%y").to_i %>
    <% month = date.strftime("%m").to_i %>
  <% end %>
  
  <% incomes.each do |income| %>
    <div>
      <%= link_to income.price, edit_income_path(income) %>
    </div>
  <% end %>
<% end %>

